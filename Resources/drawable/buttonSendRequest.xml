<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="false">
    <layer-list>
      <item android:right="1dp" android:top="1dp">
        <shape>
          <corners android:radius="5dp" />
          <solid android:color="#d6d6d6" />
        </shape>
      </item>
      <item android:bottom="1dp" android:left="1dp">
        <shape>
          <gradient android:angle="270" android:endColor="#4a6ea9" android:startColor="#4a6ea9"/>
          <stroke android:width="1dp" android:color="#BABABA"/>
          <corners android:radius="5dp"/>
          <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"/>
        </shape>
      </item>
    </layer-list>    
  </item>

  <item android:state_pressed="true">
    <layer-list>
      <item android:right="1dp" android:top="1dp">
        <shape>
          <corners android:radius="5dp" />
          <solid android:color="#d6d6d6" />
        </shape>
      </item>
      <item android:bottom="1dp" android:left="1dp">
        <shape>
          <gradient android:angle="270" android:endColor="#7c97c1" android:startColor="#4a6ea9"/>
          <stroke android:width="1dp" android:color="#BABABA"/>
          <corners android:radius="5dp"/>
          <padding android:bottom="5dp" android:left="5dp" android:right="5dp" android:top="5dp"/>
        </shape>
      </item>
    </layer-list>
  </item>
</selector>
